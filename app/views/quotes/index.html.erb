<p id="notice"><%= notice %></p>

<h1>Listing Quotes</h1>

<div class="panel panel-default">
<table class="table">
  <thead>
    <tr class="info">
     <th>Author</th>
     <th>Quote</th>
      <th>Background</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.quote %></td>
        <td><%= quote.background %></td>
        <td><%= link_to 'Show', quote, class: "label label-info" %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class: "label label-warning" %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' }, class:"label label-danger" %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>

<br>

<div class="btn btn-info"><%= link_to 'New Quote', new_quote_path %></div>
